<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head %>
</head>
<body class="container">

    <header>
        <% include partials/header %>
    </header>

    <main>
        <div class="jumbotron">
            <h1><%= title %></h1>
            <p>Welcome to booksmarks</p>
        </div>

    </main>
<div class="container">
<div class="row">
<div class="col-md-12">
<div id="error" class="" role="alert"></div>
<form method="post" action="/bookmarks" id="bookmark_form">
<div class="form-group">
    <label for="name">Category</label>
    <select class="form-control" name="category" id="book_category">
	
<% categories.forEach(function(msgObj,index){ %>
 <option value="<%=msgObj._id %>"><%=msgObj.category %></option>

  <% }) %>

</select>
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Name">
  </div>
 <div class="form-group">
    <label for="url">URL</label>
    <input type="text" class="form-control" id="url" name="url" placeholder="http://wwww.google.com">
  </div>
  
<button type="submit" class="btn btn-primary">Submit</button>
</form>

</div>
</div>

</div>

    <footer>
        <% include partials/footer %>
    </footer>
    
</body>
</html>