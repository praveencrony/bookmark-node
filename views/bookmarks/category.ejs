<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head %>
</head>
<body class="container">

    <header>
        <% include partials/header %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>Categories</h1>
            <p>Welcome to booksmarks category</p>
        </div>

    </main>
<div class="container">
<div class="row">
<div class="col-md-4 pull-right">
<a href="/category/new" class="btn btn-success pull-right">Add Category</a>
</div>
<div class="col-md-12">
<table class="table table-hover">
<thead> 
<tr> <th>#</th> 
<th>Categories</th> 
<th>Edit</th> 
<th>Delete</th> 
</tr> 
</thead>
  <% categories.forEach(function(msgObj,index){ %>
 <tr>
<td><%= index+1 %></td>
<td>   
<%= msgObj.category %>
</td>
<td><a href="/category/<%= msgObj._id %>/edit">Edit</a></td>
<td><a href="/category/<%= msgObj._id %>/delete">Delete</a></td>
</tr>

  <% }) %>
</table>

</div>
</div>

</div>

    <footer>
        <% include partials/footer %>
    </footer>
    
</body>
</html>